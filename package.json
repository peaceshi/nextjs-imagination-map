{
  "name": "nextjs-imagination-map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "envinfo": "npx envinfo --npmPackages  --system --browsers --binaries --duplicates",
    "check:all": "npm-run-all --parallel --continue-on-error check:eslint check:stylelint check:prettier",
    "check:eslint": "eslint ./",
    "check:prettier": "prettier --check .",
    "check:stylelint": "stylelint .",
    "fix:eslint": "eslint ./ --fix",
    "fix:prettier": "prettier --write .",
    "fix:stylelint": "stylelint ./ --fix",
    "postinstall": "cd './node_modules/@danmarshall/deckgl-typings' && yarn run postinstall",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 --reject '/*.gl' && yarn install && yarn upgrade",
    "packages:doctor": "ncu --doctor -u",
    "packages:taze": "npx taze -r",
    "packages:major": "npm taze major",
    "packages:minor": "npx taze minor",
    "packages:sort": "sort-package-json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "styles/*.{css,less,scss,sass}": [
      "stylelint --config .stylelintrc.json --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@koale/useworker": "^4.0.2",
    "@loaders.gl/json": "^3.0.13",
    "@nebula.gl/edit-modes": "^1.0.0-alpha.0",
    "@nebula.gl/layers": "^1.0.0-alpha.0",
    "deck.gl": "^8.6.4",
    "i18next-chained-backend": "^3.0.2",
    "i18next-http-backend": "^1.3.1",
    "next": "^12.0.4",
    "next-i18next": "^9.2.0",
    "next-pwa": "^5.4.1",
    "react": "^17.0.2",
    "react-device-detect": "^2.1.2",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.4",
    "sass": "^1.43.4",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@danmarshall/deckgl-typings": "^4.9.10",
    "@types/react": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8",
    "eslint-config-next": "^12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "7.0.4",
    "lint-staged": "^12.1.2",
    "npm-check-updates": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sort-package-json": "^1.53.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-high-performance-animation": "^1.6.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.2"
  },
  "installConfig": {
    "pnp": false
  }
}
