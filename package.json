{
  "name": "nextjs-imagination-map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "envinfo": "npx envinfo --npmPackages  --system --browsers --binaries --duplicates",
    "check:all": "yarn run eslint:check && yarn run stylelint:check && yarn run prettier:check",
    "eslint:check": "eslint ./",
    "eslint:fix": "eslint ./ --fix",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "stylelint:check": "stylelint .",
    "stylelint:fix": "stylelint ./ --fix",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 --reject '/*.gl' && yarn install && yarn upgrade",
    "packages:doctor": "ncu --doctor -u",
    "packages:taze": "npx taze -r",
    "packages:major": "npm taze major",
    "packages:minor": "npx taze minor",
    "packages:sort": "sort-package-json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "styles/*.{css,less,scss}": [
      "stylelint --config .stylelintrc.json --fix"
    ],
    "styles/*.{css,scss,less,json,html,md,markdown}": [
      "prettier --write"
    ],
    "*.{html,md,mdx,markdown}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@koale/useworker": "^4.0.2",
    "@loaders.gl/images": "^3.0.9",
    "@loaders.gl/json": "^3.0.9",
    "@nebula.gl/edit-modes": "^0.23.3",
    "ahooks": "^2.10.9",
    "deck.gl": "^8.5.4",
    "next": "^11.1.0",
    "next-i18next": "^8.6.0",
    "next-pwa": "^5.3.1",
    "react": "^17.0.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "^17.0.2",
    "sass": "^1.38.1",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@danmarshall/deckgl-typings": "^4.9.3",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "7.0.2",
    "lint-staged": "^11.1.2",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2",
    "sort-package-json": "^1.50.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.5"
  }
}
