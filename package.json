{
  "name": "nextjs-imagination-map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "envinfo": "npx envinfo --npmPackages  --system --browsers --binaries --duplicates",
    "check:all": "yarn run eslint:check && yarn run stylelint:check && yarn run prettier:check",
    "eslint:check": "eslint ./",
    "eslint:fix": "eslint ./ --fix",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "stylelint:check": "stylelint .",
    "stylelint:fix": "stylelint ./ --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "styles/*.{css,less,scss}": [
      "stylelint --config .stylelintrc.json --fix"
    ],
    "styles/*.{css,scss,less,json,html,md,markdown}": [
      "prettier --write"
    ],
    "*.{html,md,mdx,markdown}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@koale/useworker": "^4.0.2",
    "@loaders.gl/images": "^2.3.13",
    "@loaders.gl/json": "^2.3.13",
    "@nebula.gl/edit-modes": "^0.22.3",
    "ahooks": "^2.10.6",
    "deck.gl": "^8.5.0-alpha.10",
    "next": "^11.0.0",
    "next-i18next": "^8.3.0",
    "next-pwa": "^5.2.21",
    "react": "^17.0.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "^17.0.2",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@danmarshall/deckgl-typings": "^4.9.2",
    "@types/react": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.28.0",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.4"
  }
}
